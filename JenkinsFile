pipeline {
    agent { label 'slave-1' }
    stages {
        stage('checkout') {
            steps {
                sh 'rm -rf hello-world-war'
                sh 'git clone https://github.com/shrikantashetty/hello-world-war.git'
            }
        } 
       stage('build') {
            steps {
                sh 'cd hello-world-war'
                sh 'mvn clean package'
            }
        }
      stage('deploy') {
           steps {
             sh 'scp /home/ubuntu/jenkins/workspace/Test2Pipeline/target/hello-world-war-1.0.0.war root@172.31.39.193:/opt/apache-tomcat-10.1.34/webapps/'
               }
          }
    }
post {
    success {
        emailext subject: "Jenkins Job '${env.JOB_NAME}' Success",
                  body: "The Jenkins job '${env.JOB_NAME}' completed successfully. Build URL: ${env.BUILD_URL}",
                  to: "shettyshrikanta@gmail.com"
    }
    failure {
        emailext subject: "Jenkins Job '${env.JOB_NAME}' Failed",
                  body: "The Jenkins job '${env.JOB_NAME}' failed. Check the logs for details. Build URL: ${env.BUILD_URL}",
                  to: "shettyshrikanta@gmail.com"
    }
}
}
